# external -dns need iam role permssion
# iam role for pod- iam role > service account -> eks pod identiy agent(install)

# role for external dns pod
resource "aws_iam_role" "external_dns_pod_role" {
  name = "${var.env}-eks-external-dns-pod-role"

  assume_role_policy = jsonencode({
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Service": [
                    "pods.eks.amazonaws.com"
                ]
            },
            "Action": [
                "sts:AssumeRole",
                "sts:TagSession"
            ]
        }
    ]
})

} 
resource "aws_iam_role_policy" "external_dns_role_policy" {
  name = "route53-access"
  role = aws_iam_role.external_dns_pod_role.id

  policy = jsonencode({
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "route53:ChangeResourceRecordSets"
      ],
      "Resource": [
        "arn:aws:route53:::hostedzone/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "route53:ListHostedZones",
        "route53:ListResourceRecordSets",
        "route53:ListTagsForResources"
      ],
      "Resource": [
        "*"
      ]
    }
  ]
})
}

# add a policy also to role-> added to particular pod -externaldns pods
#associate role to pod> atatch to service account
resource "aws_eks_pod_identity_association" "external_dns_pod_role_association" {
  cluster_name    = aws_eks_cluster.main.name
  namespace       = "kube-system"
  service_account =  "route53-dns-external-dns"# kubectl get sa -A get all service account
  role_arn        =  aws_iam_role.external_dns_pod_role.arn
  
}

